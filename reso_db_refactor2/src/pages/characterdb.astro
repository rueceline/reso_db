---
import BaseLayout from "../layouts/BaseLayout.astro";
const BASE = import.meta.env.BASE_URL;
---

<BaseLayout title="캐릭터 DB">
  <link slot="head" rel="stylesheet" href={`${BASE}css/page-character.css`} />

  <section class="page-hero" aria-label="page title">
    <div class="hero-icon">
      <img src="../../public/assets/character_top.png" alt="👤" />
    </div>
    <div class="hero-text">
      <h1 class="hero-title">캐릭터 도감</h1>
      <p class="hero-sub">필터로 캐릭터를 빠르게 찾고 선택하세요.</p>
    </div>
  </section>

  <main class="container page-wrap">
    <div class="page-card">
      <h1 class="page-title">캐릭터 목록</h1>

      <div class="toolbar">
        <input id="searchInput" class="input" type="text" placeholder="이름 검색" />
        <span id="countBadge" class="pill">총 0명</span>
        <button id="clearFilters" class="pill" type="button">필터 초기화</button>
      </div>

      <div id="filters" class="filter-grid">
        <!-- JS에서 DOM API로 주입 -->
      </div>

      <div id="status" class="loading">데이터 로딩 중...</div>

      <div id="characterGrid" class="char-grid" aria-label="character list"></div>
    </div>
  </main>

  <script slot="scripts" src={`${BASE}app/characterdb.js`}></script>
</BaseLayout>
