---
import BaseLayout from "../layouts/BaseLayout.astro";
const BASE = import.meta.env.BASE_URL;
---

<BaseLayout title="캐릭터 DB">
  <link slot="head" rel="stylesheet" href={`${BASE}css/page-character.css`} />

  <section class="page-hero" aria-label="page title">
    <div class="hero-icon">
      <img src={`${BASE}assets/UI/character_top.png`} alt="preview" />
    </div>
    <div class="hero-text">
      <h1 class="hero-title">캐릭터 도감</h1>
      <p class="hero-sub">캐릭터의 상세 정보와 옵션을 확인하세요.</p>
    </div>
  </section>

  <main class="container page-wrap">
    <div class="page-card">
      <h1 class="page-title">캐릭터 목록</h1>

      <div class="toolbar">
        <input id="searchInput" class="input" type="text" placeholder="이름 검색" />
        <span id="countBadge" class="pill">총 0명</span>
        <button id="clearFilters" class="pill" type="button">필터 초기화</button>
      </div>

      <div id="filters" class="filter-grid">
        <!-- JS에서 DOM API로 주입 -->
      </div>

      <div id="status" class="loading">데이터 로딩 중...</div>

      <div id="characterGrid" class="char-grid" aria-label="character list"></div>
    </div>
  </main>

  <script slot="scripts" type="module" src={`${BASE}pages/characterdb.js`}></script>
</BaseLayout>

<!-- Character Picker Modal -->
<div id="charPickerModal" class="modal" hidden aria-hidden="true">
  <div id="charPickerBackdrop" class="modal-backdrop" data-close="1"></div>

  <div class="modal-dialog" role="dialog" aria-modal="true" aria-label="캐릭터 선택">
    <div class="modal-hd">
      <div class="modal-title">캐릭터 선택</div>
      <button id="charPickerClose" class="modal-close" type="button" aria-label="닫기">✕</button>
    </div>

    <div class="modal-toolbar">
      <input id="charPickerSearch" class="db-input" type="search" placeholder="이름/ID 검색" />
      <select id="charPickerRarity" class="db-select">
        <option value="">전체</option>
        <option value="SSR">SSR</option>
        <option value="SR">SR</option>
        <option value="R">R</option>
        <option value="N">N</option>
      </select>
    </div>

    <div id="charPickerList" class="char-grid">
      <!-- JS에서 CharacterDB 스타일 카드로 주입 -->
    </div>
  </div>
</div>
